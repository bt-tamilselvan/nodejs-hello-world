pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/bt-tamilselvan/nodejs-hello-world.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    sh 'docker build -t tamilselvanbt/nodejs-hello-world:latest .'
                    sh 'docker push tamilselvanbt/nodejs-hello-world:latest'
                }
            }
        }
    }
}
